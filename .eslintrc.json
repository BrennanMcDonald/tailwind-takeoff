{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "semi": "error"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["jest"],
  "ignorePatterns": ["build/*", "metadata/*", "scripts/*", "config/*"]
}
